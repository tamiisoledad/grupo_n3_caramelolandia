<!DOCTYPE html>
<html lang="en">

<%- include('partials/head',{title:"Iniciar sesión"})%>

<body class="login">
    <%- include('partials/header') %>
    <main id="login">
		<form action="/users/login" method="POST" id="form">
			<div>
			  <h1>Iniciar cuenta</h1>
		      <div class="element">
		         <div class="input-data">
		            <input type="email"  name="email" class="email">
		            <div class="underline"></div>
		            <label>Correo electronico</label>
					<small class="alert-email"></small>
		         </div>
		      </div>
		      <div class="element">
		         <div class="input-data">
					<span class="icon-pass"><i class="far fa-eye" id="eye-icon"></i></span>
		            <input type="password" name="password" class="password">
		            
		            <label>Contraseña</label>
					<small class="alert-password"></small>
		         </div><br>
				 <div class="">
		            <input type="checkbox" name="remember">
		            <label>Recordarme</label>
		         </div>
		      </div><br>
			  <span><%= locals.errores && errores ? errores.email.msg : null %></span><br>
				<input required type="submit" id="c" name="data-3" id="acept" value="Continuar">
			</div>
			<div id="get">
				<div></div>
				<div style="padding-bottom: 89px;">
					<hr>
					<p></p>
					<input  type="button" id="f" name="aceptF" id="acept" value="Continuar con Facebook" >	
				</div>
				<div id="init">
					<a href="">Recuperar cuenta</a><br>
					<a href="/users/register">Crear tu cuenta</a>
				</div>
			</div>
		</form>
	</main>
    <%- include('partials/footer') %>
	<script src="/javascript/login.js"></script>
	<script src="/javascript/facebook.js"></script>
</body>

</html>
