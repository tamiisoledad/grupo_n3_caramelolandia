<!DOCTYPE html>
<html lang="en">

<%- include('partials/head',{title: "Agregar producto"})%>

<body class="edit">
    <%- include('partials/header') %>
   <main>
       <h1>Agregar Producto</h1>
       <form action="" method="POST" enctype="multipart/form-data">
           <div class="box-form ">
               <label for="nombre">Nombre del Producto</label>
               <input type="text" name="nombre" id="nombre" class="form-control" value="<%= locals.old && old.nombre ? old.nombre : null %>">
                <small  class="text-danger small"><%= locals.errores && errores.nombre ? errores.nombre.msg : null %> </small >
           </div>

           <div class="box-form">
               <label for="info">Informacion Nutricional</label> 
               <textarea name="informacion" id="info" cols="30" rows="10" class="form-control" value="<%= locals.old && old.informacion ? old.informacion : null %>"></textarea>
               <small class="text-danger small"><%= locals.errores && errores.informacion ? errores.informacion.msg : null %> </small>
           </div>
           <div class="box-form">
               <label for="marca">Marca</label>
               <input type="text" name="marca" id="marca" class="form-control" value="<%= locals.old && old.marca ? old.marca : null %>"><br> 
                <small class="text-danger small"><%= locals.errores && errores.marca ? errores.marca.msg : null %> </small>
           </div>
            <div class="box-form">
                <label for="variedad">Variedad</label>
                <input type="text" name="variedad" id="variedad" class="form-control" value="<%= locals.old && old.variedad ? old.variedad : null %>">
                <small class="text-danger small"><%= locals.errores && errores.variedad ? errores.variedad.msg : null %> </small>
            </div>
            <div class="box-form">
                <label for="precio">Precio</label>
                <input type="number" name="precio" id="precio" class="form-control" value="<%= locals.old && old.precio ? old.precio : null %>">
                <small class="text-danger small"><%= locals.errores && errores.precio ? errores.precio.msg : null %> </small>
            </div>
                <small><%= locals.errors && errores.precio ? errores.precio.msg : null %></small>
            </div>
            <div class="box-form">
                <label for="stock">Stock</label>
                <input type="number" name="stock" id="stock"  class="form-control" value="<%= locals.old && old.stock ? old.stock : null %>">
                <small class="text-danger small"><%= locals.errores && errores.stock ? errores.stock.msg : null %> </small>
            </div>
            </div>
            <div class="box-form">
                <label for="descuento">Descuento</label>
                <input type="number" name="descuento" id="descuento" class="form-control" value="<%= locals.old && old.descuento ? old.descuento : null %>">
                <small class="text-danger small"><%= locals.errores && errores.descuento ? errores.descuento.msg : null %> </small>
            </div>
            </div>
            <div class="box-img">
                <label for="imagen">Subir Imagen</label>
                <input type="file" name="imagen" id="imagen" accept="images/*"multiple>
            </div>
            <div class="box-form">
                <label for="vegano">Apto Vegano</label>
                <select name="vegano" id="vegano">
                <option value=1>Si</option>
                <option value=0>No</option>
            </select>
            </div>
            <div class="box-form">
                <label for="categoria">Categoria</label>
                <select name="categoria" id="categoria">
                    <% categorias.forEach(categoria => { %>
                        <option value="<%= categoria.id %>"><%= categoria.name %> </option>
                       <% }) %>
            </select>
            </div>
            <div class="box-form">
                <label for="celiaco">Sin Tacc</label>
                <select name="celiaco" id="celiaco">
                <option value=1>Si</option>
                <option value=0>No</option>
            </select>
            </div>
            <div class="box-button">
                <button type="submit">Agregar Producto</button>
                <button type="reset">Cancelar</button>

            </div>

       </form>
   </main>
	
    <%- include('partials/footer') %>

</body>

</html>