<style>
#admin {
    padding: 1rem 3rem;
    min-height: 100vh;
}
#admin h1 {
    font-size: xxx-large;
    font-weight: 400;
}
#admin table,
#admin td,
#admin th {
    border: none
}
#admin table {
    width: 100%;
    display: table;
    border-collapse: collapse;
    border-spacing: 0
}
#admin tr {
    border-bottom: 1px solid rgba(0, 0, 0, .12)
}
#admin td,
#admin th {
    padding: 15px 5px;
    display: table-cell;
    text-align: left;
    vertical-align: middle;
    border-radius: 2px
}
#admin .tag {
    height: 19px;
    margin: 0px 5px -5px 0px;
}
#admin button {
    width: 1.5rem;
    height: 1.5rem;
    background: white;
    border: 1px solid rgb(0 0 0 / 50%);
    padding: 0 0 3px;
    cursor: pointer;
}
#admin input {
    outline: none;
    border: none;
    border-bottom: 1px solid rgb(0 0 0 / 12%);
    font-size: 1rem;
    position: relative;
    top: 2px;
    width: 100%;
    padding: 2px;
    background: transparent;
}
#admin hr {
    border: none;
    border-bottom: 1px solid rgb(0 0 0 / 12%);
    margin: 3px 0px 4px;
}
#admin td:nth-child(4):before {
    content: "$";
}
#admin td:nth-child(5):after {
    content: "%";
}
#admin td:nth-child(4),
#admin th:nth-child(4),
#admin td:nth-child(5),
#admin th:nth-child(5),
#admin td:nth-child(6),
#admin th:nth-child(6){
    text-align: center !important;
}
</style>
<script>
const $ = x => document.querySelectorAll(x);

function search() {
    let input, filter, table, tr, td, i, txtValue;
    input = $("#buscador")[0];
    filter = input.value.toUpperCase();
    table = $("#table")[0];
    tr = table.getElementsByTagName("tr");
    for (i = 0; i < tr.length; i++) {
        td = tr[i].getElementsByTagName("td")[0];
        if (td) {
            txtValue = td.textContent || td.innerText;
            if (txtValue.toUpperCase().indexOf(filter) > -1) {
            tr[i].style.display = "";
            } else {
                tr[i].style.display = "none";
            }
        }
    }
}
</script>
</html>